{
	"version": 4,
    "env": {
		"avr-core": "/usr/local/Cellar/avr-gcc@9/",
		"avr-version":  "9.4.0"
    },
    "configurations": [
        {
            "name": "AVR",
            "includePath": [
                "${workspaceFolder}/**",
                "${avr-core}/${avr-version}/avr/**",
				"${avr-core}/${avr-version}/"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/**",
                    "${avr-core}/${avr-version}/**"
                ]
            },
            "defines": [
                "__AVR_ATmega2560__",
                // "__DOXYGEN__"
            ],
            "compilerPath": "${avr-core}/${avr-version}/bin/avr-gcc",
            "cStandard": "c99",
            "intelliSenseMode": "${default}",
            "configurationProvider": "ms-vscode.makefile-tools"
        }
	]
}